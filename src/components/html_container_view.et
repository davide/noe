<%! Normal request %>
<%@ index(A, [Data, MainMenu]) %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml" dir="ltr" lang="en-US"> 
	<head> 
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" /> 
		<title>noe. note taking. on erlang</title> 
		<link href="<% erlyweb:get_app_root(A) %>/static/css/tripoli/tripoli.simple.css" type="text/css" rel="stylesheet" /> 
		<!--[if IE]><link rel="stylesheet" type="text/css" href="<% erlyweb:get_app_root(A) %>/static/css/tripoli/tripoli.simple.ie.css" /><![endif]--> 
		
		<link rel="stylesheet" href="<% erlyweb:get_app_root(A) %>/static/css/style.css" type="text/css" media="screen" /> 
		<!--[if IE]><style type="text/css">#content{height: 100%} </style><![endif]--> 

		<link rel="stylesheet" href="<% erlyweb:get_app_root(A) %>/static/css/plugins/boxy.css" type="text/css" media="screen" /> 

			
		<script type="text/javascript" src="<% erlyweb:get_app_root(A) %>/static/js/jquery-1.2.6.min.js"></script>
		<script type="text/javascript" src="<% erlyweb:get_app_root(A) %>/static/js/plugins/jquery.boxy.js"></script>
		<script type="text/javascript" src="<% erlyweb:get_app_root(A) %>/static/js/plugins/jquery.form.js"></script>
		<script type="text/javascript" src="<% erlyweb:get_app_root(A) %>/static/js/plugins/jquery.taconite.js"></script>
		<script type="text/javascript" src="<% erlyweb:get_app_root(A) %>/static/js/page.js"></script>
	</head> 
	<body>
		<div id="container">
			<div id="header"><img src="<% erlyweb:get_app_root(A) %>/static/images/logo.gif" alt="noe. notes. on erlang" /></div>
			<div id="content">
					<% Data %>
			</div>
			<div id="navigation">
				<% MainMenu %>
			</div>
		</div>
		<div id="footer">
			&copy; 2008 and on Dmitrii Dimandt.
			<br /><br />
			Project site: <a href="http://noe.dmitriid.com/">http://noe.dmitriid.com/</a>.
			Released under <a href="http://www.apache.org/licenses/LICENSE-2.0.html">Apache 2.0 License</a>
		</div>
		
		<div style="display: none" id="note_form">
			<form action="<% erlyweb:get_app_root(A) %>/note/add" method="post">			
				<div class="frm">
					<label for="title">Title</label>
					<input type="text" name="title" id="title" />
				</div>
				<div class="frm">
					<label for="text">Text</label>
					<textarea name="text" id="text"></textarea>
				</div>
				<div class="frm">
					<input type="submit" value="Save" />
					<a href="/">Cancel</a>
				</div>
			</form>
		</div>
	</body>
</html>

<%! Ajax request %>
<%@ index(A, {xhr, Data}) %>
<% Data %>
